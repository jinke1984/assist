<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_dialog_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_one_tv"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="@string/tishi"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/one_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="70dp"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:textColor="#323232"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E1E1E1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one_ok"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/qd"
                android:textColor="@drawable/tab_textcolor_selector"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>