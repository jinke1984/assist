<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@drawable/item_bg">

    <TextView
        android:id="@+id/xxmc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.5dip"
        android:layout_marginLeft="13.3dip"
        android:layout_marginRight="13.3dip"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>

    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xxmc_tv"
        android:layout_marginTop="8.8dip"
        android:layout_marginLeft="13.3dip"
        android:layout_marginRight="13.3dip">
        <TextView
            android:id="@+id/zz_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/ly_tv"
            android:layout_marginRight="13.3dip"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/ly_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/fbsj_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.8dip"
        android:layout_marginLeft="13.3dip"
        android:layout_marginRight="13.3dip"
        android:layout_below="@+id/text_layout"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingBottom="6.5dip"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/home_line"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>